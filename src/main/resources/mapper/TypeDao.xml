<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rf.dao.TypeDao">
    <resultMap id="BaseResultMap" type="com.rf.model.TypeModel">
        <id column="id" jdbcType="INTEGER" property="id"></id>
        <result column="name" jdbcType="VARCHAR" property="name"></result>
        <result column="parent_type" jdbcType="INTEGER" property="parentType"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
    </resultMap>

    <sql id="BaseSearchList">
        id,`name`,parent_type,sort
    </sql>

    <select id="selectAll" resultMap="BaseResultMap">
        select <include refid="BaseSearchList"></include>
            from type order by id asc
    </select>

</mapper>